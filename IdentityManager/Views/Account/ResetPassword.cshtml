@model ResetPasswordViewModel
@{
	ViewData["Title"] = "Reset Password";
}

<h1 class="text-info">@ViewData["Title"].</h1>
<div class="row">
	<div class="col-md-12">
		<section>
			<form asp-controller="Account" asp-action="ResetPassword" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
				<h4>Reset your password.</h4>
				<hr />
				<input asp-for="Code" hidden />
				<input asp-for="Email" hidden />

				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-floating mb-2">
					<input asp-for="Password" class="form-control" placeholder=" " />
					<label asp-for="Password" class="col-md-2 control-label">Password</label>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-floating mb-2">
					<input asp-for="ConfirmPassword" class="form-control" placeholder=" " />
					<label asp-for="ConfirmPassword" class="col-md-2 control-label">Confirm Password</label>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="form-group">
					<div class="col-md-2">
						<button type="submit" class="w-100 btn btn-lg btn-success form-control">Reset Password</button>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
