@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
}

<h1 class="text-info">@ViewData["Title"].</h1>
<div class="row">
	<div class="col-md-12">
		<section>
			<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
				<h4>Create a new account.</h4>
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-floating mb-2">
					<input asp-for="Email" class="form-control" placeholder=" " />
					<label asp-for="Email">Email</label>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-floating mb-2">
					<input asp-for="Name" class="form-control" placeholder=" " />
					<label asp-for="Name">Name</label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating mb-2">
					<input asp-for="Password" class="form-control" placeholder=" " />
					<label asp-for="Password">Password</label>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="form-floating mb-2">
					<input asp-for="ConfirmPassword" class="form-control" placeholder=" " />
					<label asp-for="ConfirmPassword">Confirm Password</label>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="form-floating mb-2">
					<select class="form-select" asp-for="RoleSelected" asp-items="@Model.RoleList">
						<option disabled selected>--Select Role--</option>
					</select>
					<label asp-for="RoleSelected">Select Role</label>
					<span asp-validation-for="RoleSelected" class="text-danger"></span>
				</div>
				<div class="form-group">
					<div class="col-md-2">
						<button type="submit" class="w-100 btn btn-lg btn-success form-control">Register</button>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
