@model ApplicationUser
<h1 class="text-info"> Edit User </h1>

<div class="row">
	<div class="col-md-8">
		<form method="post" asp-action="Edit">
			<input asp-for="@Model.Id" hidden />
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-floating mb-2">
				<input asp-for="Name" class="form-control" placeholder=" " />
				<label asp-for="Name" class="col-md-2 control-label"></label>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Email" hidden />
				<input asp-for="Email" readonly class="form-control" placeholder=" " />
				<label asp-for="Email">Email</label>
			</div>
			<div class="form-floating mb-2">
				<select class="form-select" asp-for="RoleId" asp-items="@Model.RoleList">
					<option disabled selected>--Select Role--</option>
				</select>
				<label asp-for="RoleId">Select Role</label>
			</div>
			<div class="form-group mb-2">
				<button type="submit" class="btn btn-lg btn-primary">Update</button>
				<a asp-action="Index" class="btn btn-lg btn-success ms-1">Back to list</a>
			</div>
		</form>
	</div>
</div>